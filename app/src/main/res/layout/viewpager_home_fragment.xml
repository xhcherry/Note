<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="TODO"
            android:src="@drawable/magic"
            tools:ignore="ContentDescription,HardcodedText" />

        <TextView
            android:layout_width="179dp"
            android:layout_height="39dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:paddingStart="1dp"
            android:text="Note home"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="2dp">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <ImageButton
                    android:id="@+id/a"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="90dp"
                    android:backgroundTint="#f0c1ff"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/xinjian"
                    tools:ignore="RtlHardcoded,TouchTargetSizeCheck" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@id/a"
                    android:backgroundTint="#f0c1ff"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/shezhi"
                    tools:ignore="RtlHardcoded,TouchTargetSizeCheck" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/lishi"
            tools:ignore="ContentDescription" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:text="最近访问的笔记"
            android:textColor="#000000"
            tools:ignore="HardcodedText,RtlSymmetry" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="100"
        android:divider="#d9d9d9"
        android:dividerHeight="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="250dp"
            android:backgroundTint="#ffffff"
            android:gravity="center_vertical"
            android:text="查看已共享的笔记"
            android:textColor="#8a2be2"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>